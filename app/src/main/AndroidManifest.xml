<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.indianic.baseproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".BaseProjectApplication"
        android:allowBackup="true"
        android:configChanges="locale|orientation|keyboardHidden|screenSize"
        android:icon="@drawable/ic_brand_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateHidden|adjustResize">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Main activity -->
        <activity
            android:name=".activity.MainActivity"
            />
        <activity
            android:name=".activity.LoginActivity"
             />

        <activity
            android:name=".activity.ForgotPasswordActivity"
            />
        <activity
            android:name=".activity.OnLineVideoPlayerActivity"
            android:configChanges="locale|orientation|keyboardHidden|screenSize"
            />
        <activity
            android:name=".activity.OffLineVideoPlayerActivity"
            android:configChanges="locale|orientation|keyboardHidden|screenSize"
             />
    </application>

</manifest>