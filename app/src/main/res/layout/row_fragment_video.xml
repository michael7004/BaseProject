<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="@dimen/_3sdp"
        card_view:cardElevation="@dimen/_3sdp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.indianic.baseproject.common.SquareImageView
                android:id="@+id/row_fragment_video_iv_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:src="@drawable/ic_play_arrow_red_700_24dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_fragment_video_iv_logo"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.example.indianic.baseproject.common.CustomTextview
                    android:id="@+id/row_fragment_video_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Unlock"
                    android:textColor="@color/colorBlack"
                    card_view:font_name="@string/font_open_sans_bold" />

                <ImageView
                    android:id="@+id/row_fragment_video_iv_more_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_more_vert_black_24dp" />
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>